{
  "cleanUrls": true,
  "trailingSlash": false,

  
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/sitemap.xml" },
    { "source": "/robots.txt",  "destination": "/robots.txt" }
  ],

  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
